{
  "manifest_version": 2,
  "name": "Pokémon Tracker",
  "version": "1.0",
  "description": "Notifies you when specific Pokémon appear on moonani.com.",
  "permissions": [
    "notifications",
    "alarms",
    "https://moonani.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon128.png"
  }
}
