{
  "manifest_version": 2,
  "name": "Pokémon Tracker",
  "version": "1.0",
  "description": "Notifies you when specific Pokémon appear on moonani.com.",
  "permissions": [
    "notifications",
    "alarms",
    "https://moonani.com/*",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon128.png"
  }
}
